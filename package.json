{
  "name": "reader",
  "version": "0.0.1",
  "description": "all your feeds at one place",
  "main": "index.js",
  "repository": "https://github.com/alivenotions/reader",
  "author": "Bhavdeep Dhanjal <dhanjalbhavdeep@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn watch:css & yarn dev",
    "build": "yarn build:css && yarn build:ts",
    "build:ts": "parcel build ./src/index.html",
    "dev": "parcel ./src/index.html",
    "build:css": "postcss src/styles/index.css -o src/index.css",
    "watch:css": "postcss src/styles/index.css -o src/index.css -w",
    "lint": "eslint src/**/*.ts*",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@typescript-eslint/eslint-plugin": "1.5.0",
    "@typescript-eslint/parser": "1.5.0",
    "autoprefixer": "9.5.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-react-hooks": "1.6.0",
    "jest": "24.6.0",
    "parcel-bundler": "1.12.3",
    "postcss-cli": "6.1.2",
    "tailwindcss": "0.7.4",
    "ts-jest": "24.0.1",
    "typescript": "3.4.1"
  },
  "dependencies": {
    "@types/react": "16.8.13",
    "@types/react-dom": "16.8.4",
    "@types/react-router-dom": "4.3.1",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-router-dom": "5.0.0",
    "react-switch": "4.1.0"
  }
}
